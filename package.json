{
  "name": "react-point",
  "version": "1.0.1",
  "description": "A minimal click/tap component for React",
  "repository": "mjackson/react-point",
  "author": "Michael Jackson",
  "license": "MIT",
  "main": "lib",
  "files": [
    "lib",
    "umd"
  ],
  "scripts": {
    "build-lib": "rimraf lib && babel ./modules -d lib --ignore '__tests__'",
    "build-umd": "webpack modules/index.js umd/react-point.js",
    "build-min": "webpack -p modules/index.js umd/react-point.min.js",
    "build": "node ./scripts/build.js",
    "prepublish": "node ./scripts/build.js",
    "release": "node ./scripts/release.js",
    "test": "karma start"
  },
  "peerDependencies": {
    "react": "15.x"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.5.0",
    "expect": "^1.20.2",
    "gzip-size": "^3.0.0",
    "in-publish": "^2.0.0",
    "karma": "^1.1.2",
    "karma-browserstack-launcher": "^1.0.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.5.3",
    "pretty-bytes": "^3.0.1",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.3.0",
    "react-dom": "^15.3.0",
    "readline-sync": "^1.4.4",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.1"
  },
  "keywords": [
    "react",
    "touch",
    "tap",
    "click",
    "point"
  ]
}
